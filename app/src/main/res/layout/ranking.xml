                        <TextView android:id="@+id/puntuacio2"
                            android:text="Puntos Usuario 2"
                            android:textSize="24sp"
                            android:textAlignment="center"
                            android:gravity="center_horizontal"/>
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent">
                        <TextView
                            android:id="@+id/ranking3"
