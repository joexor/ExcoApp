                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/ranking1"
                            android:text="1"
                            android:textSize="24sp"
                            android:textAlignment="center"
                            android:gravity="center_horizontal"/>

                        <TextView
                            android:id="@+id/user1"
                            android:text="usuario 1"
                            android:textSize="24sp"
                            android:textAlignment="center"
                            android:gravity="center_horizontal"/>

                        <TextView
                            android:id="@+id/puntuacio1"
                            android:text="Puntos Usuario 1"
                            android:textSize="24sp"
                            android:textAlignment="center"
                            android:gravity="center_horizontal"/>
                    </TableRow>
                    <TableRow
